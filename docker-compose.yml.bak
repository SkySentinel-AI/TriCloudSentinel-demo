version: "3.8"

services:
  zookeeper:
    image: bitnami/zookeeper:latest
    environment:
      - ALLOW_ANONYMOUS_LOGIN=yes
    ports:
      - "2181:2181"

  kafka:
    image: bitnami/kafka:latest
    environment:
      - KAFKA_BROKER_ID=1
      - KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
      - ALLOW_PLAINTEXT_LISTENER=yes
      - KAFKA_LISTENERS=PLAINTEXT://:9092
      - KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092
    ports:
      - "9092:9092"
    depends_on:
      - zookeeper

  prometheus:
    image: prom/prometheus:latest
    volumes:
      - ./prometheus.yml:/etc/prometheus/prometheus.yml:ro
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'
    ports:
      - "9090:9090"

  grafana:
    image: grafana/grafana-oss:9.5.0
    environment:
      - GF_SECURITY_ADMIN_PASSWORD=admin
    ports:
      - "3000:3000"
    depends_on:
      - prometheus

  agent1:
    image: python:3.10-slim
    working_dir: /app
    volumes:
      - ./services/agent-scorer:/app
    command: ["python","agent.py","--name","agent-azure","--interval","1"]
    depends_on:
      - kafka

  agent2:
    image: python:3.10-slim
    working_dir: /app
    volumes:
      - ./services/agent-scorer:/app
    command: ["python","agent.py","--name","agent-gcp","--interval","1"]
    depends_on:
      - kafka

  agent3:
    image: python:3.10-slim
    working_dir: /app
    volumes:
      - ./services/agent-scorer:/app
    command: ["python","agent.py","--name","agent-ibm","--interval","1"]
    depends_on:
      - kafka

  ensemble:
    image: python:3.10-slim
    working_dir: /app
    volumes:
      - ./services/ensemble:/app
    ports:
      - "9000:9000"
    command: ["python","ensemble.py"]
    depends_on:
      - kafka

  safety_gate:
    image: python:3.10-slim
    working_dir: /app
    volumes:
      - ./services/remediation:/app
    ports:
      - "9100:9100"
    command: ["python","safety_gate.py"]
    depends_on:
      - ensemble
